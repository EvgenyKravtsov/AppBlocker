<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/color_exercise_fragment_coordinator_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimaryLight"
        android:id="@+id/exercise_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Choose"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:id="@+id/color_exercise_fragment_color_text_view"
                tools:text="red" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:shrinkColumns="1">

            <TableRow android:gravity="center_horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_1"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_2"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_3"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_4"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_5"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

            </TableRow>

            <TableRow android:gravity="center_horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_6"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_7"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_8"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_9"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp">

                    <View
                        android:id="@+id/color_exercise_fragment_plate_10"
                        style="@style/ColorExerciseImage"
                        tools:background="@android:color/darker_gray" />

                </android.support.v7.widget.CardView>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/sound_button_icon"
        android:id="@+id/color_exercise_fragment_sound_button"
        app:fabSize="normal"
        app:layout_anchor="@+id/exercise_layout"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>
